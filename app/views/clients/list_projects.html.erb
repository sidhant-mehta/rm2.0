<%= javascript_include_tag "clients" %>
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<%= render :partial => 'shared/client/header' %>
<%= render :partial => 'shared/client/secondarybar_and_sidebar'%>
<%= stylesheet_link_tag "validation/validation_default", :type => "text/css", :media => "screen"%>

		<section id="main" class="column">
			<%= render :partial => 'shared/member/alerts_and_notices'%>
				<article class="module width_full" style="border:none; background:transparent;">			
					<h1>Listing projects</h1>

					<table>
					  <tr>
					    <th>Name</th>
					    <th>Project leader</th>
					    <th>Sectors</th>
					    <th>Organisation</th>
					    <th>Closing date</th>
					    <th>Location</th>
					    <th>Description</th>
					    <th>Email</th>
					    <th>Telephone</th>
					    <th>Draft</th>
					    <th></th>
					    <th></th>
					    <th></th>
					  </tr>
					
					<% @projects.each do |project| %>
					  <tr>
					    <td><%= project.name %></td>
					    <td><%= project.project_leader %></td>
					    <td><%= sectorsHTML(project) %></td>
					    <td><%= project.organisation %></td>
					    <td><%= project.closing_date %></td>
					    <td><%= project.location %></td>
					    <td><%= project.description %></td>
					    <td><%= project.email %></td>
					    <td><%= project.telephone %></td>
					    <td><%= project.draft %></td>
					    <td><%= link_to 'Show', project %></td>
					    <td><%= link_to 'Edit', clients_edit_project_path + "/#{project.id}/#{project.name}" %></td>
					    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					  </tr>
					<% end %>
					</table>
					
					<br />
			</article>
		</section>
		
