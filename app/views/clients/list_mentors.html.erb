<%= javascript_include_tag "clients" %>
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<%= render :partial => 'shared/client/header' %>
<%= render :partial => 'shared/client/secondarybar_and_sidebar'%>
<%= stylesheet_link_tag "validation/validation_default", :type => "text/css", :media => "screen"%>

		<section id="main" class="column">
			<%= render :partial => 'shared/member/alerts_and_notices'%>
				<article class="module width_full" style="border:none; background:transparent;">			
					<h1>Listing mentors</h1>
					
					<table>
					  <tr>
					    <th>First Name</th>
					    <th>Last Name</th>
					    <th>Role title</th>
					    <th>Sectors</th>
					    <th>Organisation</th>
					    <th>Closing Date</th>
					    <th>Location</th>
					    <th>Description</th>
					    <th>Email</th>
					    <th>Telephone</th>
					    <th>Image</th>
					    <th>Draft</th>
					    <th></th>
					    <th></th>
					    <th></th>
					  </tr>
					
					<% @mentors.each do |mentor| %>
					  <tr>
					    <td><%= mentor.id %></td>
					    <td><%= mentor.lname %></td>
					    <td><%= mentor.role_title %></td>
					    <td><%= mentor.sector_ids %></td>
					    <td><%= mentor.organisation %></td>
					    <td><%= mentor.closing_date %></td>
					    <td><%= mentor.location %></td>
					    <td><%= mentor.description %></td>
					    <td><%= mentor.email %></td>
					    <td><%= mentor.telephone %></td>
					    <td><%= mentor.image %></td>
					    <td><%= mentor.draft %></td>
					    <td><%= link_to 'Show', mentor %></td>
					    <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
					    <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					  </tr>
					<% end %>
					</table>
					
					<br />
					
					<%= link_to 'New Mentor', new_mentor_path %>
			</article>
		</section>