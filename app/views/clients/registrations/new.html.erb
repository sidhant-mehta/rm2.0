<style>
	.tab-content input {
		margin-bottom: 1em;
	}
	.tab-content {
		background: none !important;
		border: none !important;
	}
</style>
<div style="width: 80%;margin: 5% auto;">
<h2>Sign up a client</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= #f.error_messages 
  devise_error_messages! %>

<div class="tabs-horz-top" style="width: 55%">
	<ul class="tabs-nav">
		<li><a href="">Organisation Details</a></li>
		<li><a href="">Security</a></li>
		<li><a href="">Sign Up!</a></li>
	</ul>
	<div class="tab-content"> 
		  <%= f.text_field :organisation, :placeholder => "Organisation name" %> 
		  <%= f.email_field :email, :autofocus => true, :placeholder => "Organisation email address"%>	 
		</div>
	<div class="tab-content">
				<%= f.password_field :password, :placeholder=>"Password" %>
  			<%= f.password_field :password_confirmation, :placeholder => "Retype Password" %>
	</div>
	<div class="tab-content">
		 <%= f.submit "Sign up", :class => "btn", :style => "width: 21em"%>
	</div>
</div>

<% end %>
<%= render "devise/shared/links" %>
</div>
