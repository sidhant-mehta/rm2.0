<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<%= render :partial => 'shared/client/header' %>
<%= render :partial => 'shared/client/secondarybar_and_sidebar'%>
<%= stylesheet_link_tag "validation/validation_default", :type => "text/css", :media => "screen"%>

		<section id="main" class="column">
			<%= render :partial => 'shared/member/alerts_and_notices'%>
			<h4 class="alert_info">Welcome to your dashboard! This is where you can view, edit and adde mentors, projects and jobs for your company.</h4>
	
			<article class="module width_full" style="border:none; background:transparent;">
		
				<ul class="tabs">
		   			<li><a href="#tab1">Personal Details</a></li>
		    		<li><a href="#tab2">Profession Details</a></li>
		    		<li><a href="#tab3">Other</a></li>
				</ul>

				<div class="tab_container" style="clear:both; padding: 5% 0 0 5%;">
					<%= form_for(@mentor,url: {action: "create_mentor"},html: {id:"form", class: "blocks"}) do |f| %>
					<div id="tab1" class="tab_content">
						<table>
							<tr>
								<td><%= f.label :fname, 'First Name:' %></td>
								<td><%= f.text_field :fname, :class => "text" %></td>
							</tr>
							<tr>
								<td> <%= f.label :lname, 'Last Name:' %></td>
								<td> <%= f.text_field :lname, :class => "text" %></td>
							</tr>
							<tr>
								<td><%= f.label :description %></td>
								<td><%= f.text_field :description, :class => "text" %></td>
							</tr>
							<tr>
								<td><%= f.label :email %></td>
								<td><%= f.text_field :email, :class => "text" %></td>
							</tr>
							<tr>
								<td><%= f.label :telephone %></td>
								<td><%= f.text_field :telephone, :class => "text" %></td>
							</tr>
						</table>
					</div>
					
					<div id="tab2" class="tab_content">
						<table>
							<tr>
								<td><%= f.label :organisation %></td>
								<td><%= f.text_field :organisation, :class => "text" %></td>
							</tr>
							<tr>
								<td><%= f.label :role_title %></td>
								<td><%= f.text_field :role_title, :class => "text" %></td>
							</tr>
							<tr>
								<td><%= f.label :location %></td>
								<td><%= f.text_field :location, :class => "text" %></td>
							</tr>
							<tr>
								<td><%= f.label :sector_ids, 'Works in (select max 3)' %></td>
								<td><%=f.select :sector_ids, Sector.all.collect {|s| [ s.name, s.id ] }, {:include_blank => false}, { :multiple => true, :size => 3 } 
								#f.select_tag :sector_ids, options_from_collection_for_select(@sectors, "id", "name"), {:multiple => true, :style => "background: white; width:242px;"} 
								%></td>
							</tr>
							<tr>
								
							</tr>
						</table>
					</div>
						
					<div id="tab3" class="tab_content">
						<table>
							<tr>
								<td><%= f.label :closing_date %></td>
								<td><%= f.text_field :closing_date, :class => "text", :id=>"datepicker_future", :readonly =>true%>
								<!--<td><%= #f.date_select :closing_date 
									%></td> -->
							</tr>
							<tr>
								<td><%= f.label :image %></td>
								<td><%= f.text_field :image, :class => "text" %></td>
							</tr>
							<tr>
								<td><%= f.label :draft, 'Is this a draft?' %></td>
								<td><%= f.check_box :draft %></td>
							</tr>
						</table>				
					</div>
					<% #TODO create validatin server side n client. change css. 
					%> 
					<div class ="submit_link">
						<%= f.submit %>
					</div>
					<% end %>
				</div>
			</article>
		</section>