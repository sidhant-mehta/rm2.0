<style>
	.tab-content input {
		margin-bottom: 1em;
	}
	.tab-content {
		background: none !important;
		border: none !important;
	}
</style>
<div style="margin: 5% auto;">
	<h2>Register </h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= #f.error_messages
    devise_error_messages! %>

	<div class="tabs-horz-top" style="width: 55%">
		<ul class="tabs-nav">
			<li>
				<a href="">Personal Details</a>
			</li>
			<li>
				<a href="">Security</a>
			</li>
			<li>
				<a href="">Sign Up!</a>
			</li>
		</ul>
		<div class="tab-content">
			<%= f.text_field :fname, :placeholder => "First name" %>
			<%= f.text_field :lname, :placeholder => "Last name" %>
			<%= f.text_field :dob, :placeholder => "Date of Birth DD/MM/YYYY" %>
			<%= f.email_field :email, :autofocus => true, :placeholder => "Email address"%>
			<br>
			<td><%= f.label 'gender', 'Gender' %></td>
			<td><%= f.select  'gender', options_for_select([[""],["Male"],["Female"]]), {}, :class => "text", :style=> "width:242px; height: 35px;" %></td>
			<br />
			<td><%= f.label('location', 'You live in')%></td>
			<td><%= f.select  'location', options_from_collection_for_select(Location.all, "id", "name"), {}, :class => "text", :style=> "width:242px; height: 35px;" %></td>
			<br />
			<td><%= f.label('academic_institution', 'Your Academic Institution')%></td><td><%= f.text_field 'academic_institution', :class => "text"%></td>
			<br />
			<td><%= f.label('course', 'Your Course')%></td><td><%= f.text_field 'course', :class => "text"%></td>
			<br />
			<td><%= f.label('sector_ids', 'Interested in (select max 3)')%></td>
			<td><%= f. select  "sector_ids", options_from_collection_for_select(Sector.all, "id", "name"), {},{:multiple => true, :style => "background: white; width:242px;"} %></td>
			<br/>
			<td><%= f.label('employment_status', 'Your employment status')%></td>
			<td><%= f. select  "employment_status", options_for_select([[''],['Self-employed'], ['Young professional'], ['Unemployed'], ['University student'], ['Other']]),{}, {:class => "text", :style=>"width:242px"}%></td>
<br/>
<tr> 
						<td><%= f.label('cv', 'Upload Your CV')%></td>
						<td><%= f.file_field :cv, :accept => 'text/pdf/doc/docx' %></td>
					</tr>
<br/>
			<label>Where did you hear about us? </label><%= f.select "hear_about_us", options_for_select([["University Rep"],["Social Media"], ["Advert"], ["Friends/Colleagues"], ["Google search"], ["Other"]]), {},{:class => "drop_down", :style=> "width:242px !important; clear:both;" }  %>
		</div>
		<div class="tab-content">
			<%= f.password_field :password, :placeholder=>"Password" %>
			<%= f.password_field :password_confirmation, :placeholder => "Retype Password" %>
		</div>
		<div class="tab-content">
			<%= f.submit "Sign up", :class => "btn", :style => "width: 21em"%>
		</div>
	</div>

	<% end %>
	<%= render "devise/shared/links" %>
</div>