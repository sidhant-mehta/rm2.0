<div style="width: 80%;margin: 5% auto;">
<h2>Forgot your password?</h2>
<h3>Just enter your email address below</h3>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "log_in", :method => :post }) do |f| %>
  <%= devise_error_messages! %>


  <%= f.email_field :email, :autofocus => true, :placeholder =>"Email Address" %>

  <%= f.submit "Reset", :class=> "btn" %>
<% end %>

<%= render "devise/shared/links" 
%>
</div>
