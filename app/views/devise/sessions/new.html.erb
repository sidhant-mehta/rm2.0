
<% #TODO change css around. have the forgotten password and sign up on right hand side shown as buttons. make sign in button centered and slighly bigger
 
 %>
<%= stylesheet_link_tag "login"%>
<br /><br /><br /><br /><br /><br />
<h1>Sign in</h1>
<div>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => ""} ) do |f| %>
	
  	<p>
  		<%= f.label :email %>
  		<%= f.email_field :email, :autofocus => true %>
	</p>
<br/>
  	<p>
  		<%= f.label :password %>
  		<%= f.password_field :password %>
	</p>
 <br/>
 
 <% if devise_mapping.rememberable? -%>
    	<p>
    		<%= f.check_box :remember_me %> 
    		<%= f.label :remember_me %>
    			<%= f.submit "Sign in", :style => "margin-left: 14em;" %>
    	</p>
    	
  <br/>  	
  <p>
 
 </p>
 
  	
  	<% end -%>
 

 
 <p class="forgot-password">
 	<%= render "devise/shared/links" %>
</p>
<% end %>
</div>
