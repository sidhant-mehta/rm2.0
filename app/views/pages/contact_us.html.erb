<section class="padsection5" style="margin-top: 2em;">
		<div class="container_24">
			<div class="wrapper">
				<div class="grid_12">
					<h2 class="">Our Address</h2>
					<div class="map"><iframe src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Brooklyn,+New+York,+NY,+United+States&amp;aq=0&amp;sll=37.0625,-95.677068&amp;sspn=61.282355,146.513672&amp;ie=UTF8&amp;hq=&amp;hnear=Brooklyn,+Kings,+New+York&amp;ll=40.649974,-73.950005&amp;spn=0.01628,0.025663&amp;z=14&amp;iwloc=A&amp;output=embed"></iframe></div>
					<address class="contacts">
						<p>The Company Name Inc.<br>
						8901 Marmora Road,<br>
						Glasgow, D04 89GR.</p>
						<span>Freephone:</span>+1 800 559 6580<br>
						<span>Telephone:</span>+1 800 603 6035<br>
						<span>FAX:</span>+1 800 889 9898<br>
						<em class="color1">E-mail:</em> <a href="#">mail@demolink.org</a>
					</address>
				</div>
				<div class="grid_12">
					<h2 class="">Send Message</h2>
					
					<%= form_tag("/pages/send_email", method:"post") do %>
						<fieldset>
							<label class="name">
								<%= text_field_tag :name, 'Name'%>
								<span class="clear"></span>
								<span class="clear"></span>
							</label>
							<label class="email">
								<%= email_field_tag :email, 'E-mail'%>
								<span class="clear"></span>
								<span class="clear"></span>
							<label class="message">
							</label>
								<%= text_area_tag :message, 'Message', :id=>'message', :style=> "width: 284px; height: 200px" %>
								<span class="clear"></span>
								<span class="clear"></span>
							</label>
							<div class="buttons">
								<%= submit_tag 'Send', :class => "button"%>
							</div>
						</fieldset>
						<% end%>
						
				</div>
			</div>
		</div>
	</section>	
</div>