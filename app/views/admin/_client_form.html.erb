<%= form_for(@client,url: {action: @action_address},html: { class: "blocks"}) do |f| %>
<div id="tab1" class="tab_content">
	<%= f.text_field :organisation, :placeholder => "Organisation name", :class=>"text" %>
	<%= f.email_field :email, :autofocus => true, :placeholder => "Organisation email address", :class => "text"%>
</div>
<div id="tab2" class="tab_content">
	<p>Leave blank if you do not want to change the current settings.</p>
	<%= f.password_field :password, :placeholder=>"Password", :class => "text" %>
	<%= f.password_field :password_confirmation, :placeholder => "Retype Password",  :class => "text" %>
</div>
<div id="tab3" class="tab_content">
	<%= f.submit "Update", :style => "width: 21em"%>
</div>
<% end %>